# MongoDB Configuration
# Using MongoDB Memory Server for development to avoid external database dependency
MONGODB_URI=mongodb://127.0.0.1:27017/smart-city
MONGODB_USE_MEMORY_SERVER=true

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=1d

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug 